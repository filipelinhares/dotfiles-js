[color]
  ui = true

[color "grep"]
  match = cyan bold
  selected = blue
  context = normal
  filename = magenta
  linenumber = green
  separator = yellow
  function = blue

[pretty]
  line = "%C(auto)%h%d %s %C(yellow)by %C(blue)%an %C(green)%ar"
  compact = "%C(auto)%h %s %C(green)%ar%n %C(auto)%d%n"
  detail = "%C(auto)%h %s%n  %C(yellow)by %C(blue)%an %C(magenta)<%ae> [%G?] %C(green)%ar%n %C(auto)%d%n"

[merge]
  defaultToUpstream = true
  tool = vimdiff

[mergetool]
  keepBackup = false

[push]
  default = upstream

[credential]
  helper = cache --timeout=3600

[grep]
  lineNumber = true

[advice]
  detachedHead = false

[core]
  excludesfile = ~/.gitignore_global
	editor = nano

